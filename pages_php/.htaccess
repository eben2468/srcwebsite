# Enable URL rewriting
RewriteEngine On

# Set the base directory
RewriteBase /vvusrc/pages_php/

# If the requested file or directory exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirect all other requests to the appropriate PHP file
RewriteRule ^user-edit/([0-9]+)/?$ user-edit.php?id=$1 [QSA,L]
RewriteRule ^users/?$ users.php [QSA,L]

# Handle 404 errors
ErrorDocument 404 /vvusrc/pages_php/404.php 