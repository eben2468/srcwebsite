<?php
// Include authentication file if not already included
if (!function_exists('getCurrentUser') && file_exists('../auth_functions.php')) {
    require_once '../auth_functions.php';
}

// Include auth bridge for admin status
if (!function_exists('getBridgedAdminStatus') && file_exists('../auth_bridge.php')) {
    require_once '../auth_bridge.php';
}

// Include database config if not already included
if (!function_exists('fetchOne') && file_exists('../db_config.php')) {
    require_once '../db_config.php';
}

// Determine admin status from bridge or URL parameter
$isAdmin = false;
if (function_exists('getBridgedAdminStatus')) {
    $isAdmin = getBridgedAdminStatus();
} elseif (isset($_GET['admin']) && $_GET['admin'] == 1) {
    $isAdmin = true;
}

// Get current user info - from auth system if available, or use defaults
$currentUser = null;
if (function_exists('isLoggedIn') && isLoggedIn() && function_exists('getCurrentUser')) {
    $currentUser = getCurrentUser();
    // Check if admin status from auth system should override
    if (function_exists('isAdmin') && isAdmin()) {
        $isAdmin = true;
    }
}

// Get user profile data including full name
$userId = $currentUser['user_id'] ?? 0;
$userProfile = null;
if ($userId > 0) {
    try {
        $userProfile = fetchOne("SELECT * FROM user_profiles WHERE user_id = ?", [$userId]);
    } catch (Exception $e) {
        // Silently handle any database errors
    }
}

// Get user's name and first initial for avatar
$fullName = $userProfile['full_name'] ?? $currentUser['username'] ?? ($isAdmin ? 'Admin' : 'Guest');
$userInitial = strtoupper(substr($fullName, 0, 1));
$userName = $fullName;
$userRole = ucfirst($currentUser['role'] ?? ($isAdmin ? 'Admin' : 'Visitor'));

// Get current page for active menu highlighting
$currentPage = basename($_SERVER['PHP_SELF']);

// Set navbar class based on admin status
$navbarClass = $isAdmin ? 'navbar-admin' : 'navbar-default';

// Helper function to add admin parameter to URLs
function addAdminParam($url) {
    global $isAdmin;
    if (!$isAdmin) return $url;
    
    return strpos($url, '?') !== false ? $url . '&admin=1' : $url . '?admin=1';
}
